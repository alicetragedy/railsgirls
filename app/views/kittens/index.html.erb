<h1><i>Wonderful List Of Unbearably Cute Kitties</i></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @kittens.each do |kitten| %>
  <tr>
    <td><%= kitten.name %></td>
    <td><%= kitten.description %></td>
    <td><%= image_tag(kitten.picture_url, :width => 200) if kitten.picture.present? %></td>
    <td><%= link_to 'Show', kitten %></td>
    <td><%= link_to 'Edit', edit_kitten_path(kitten) %></td>
    <td><%= link_to 'Destroy', kitten, confirm: 'Are you sure you want to kill the kitty? :(', method: :delete %></td>
  </tr>
<% end %>
</table>

